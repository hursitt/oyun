{% extends "::layout_admin.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Yeni Kategori Ekleme</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Kategori Ekleme Formu
                </div>
                <div class="panel-body">
                    <form action="{{ path('admin_add_category') }}" method="post">
                        <div class="form-group">
                            <label>Kategori İsmi</label>
                            {{ form_widget(form.name) }}
                        </div>
                        <div class="form-group">
                            <label>Kategori Açıklaması</label>
                            {{ form_widget(form.description, {'attr': {'class': 'ckeditor'} } ) }}
                        </div>
                        <button type="submit" class="btn btn-default">Kategoriyi Ekle</button>

                        {{ form_rest(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->



{% endblock %}