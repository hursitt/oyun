{% extends "::layout_admin.html.twig" %}


{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Oyunlar</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Oyun Listesi
                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables">
                            <thead>
                            <tr>
                                <th>İsim</th>
                                <th>Kategori</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Düzenle</th>
                                <th>Önizleme</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for game in games %}
                            <tr>
                                <td>{{ game.name }}</td>
                                <td>{{ game.category }}</td>
                                <td><input type="checkbox" class="isActive-switch" id="{{ game.slug }}" data-size="medium" data-on-text="Aktif" data-off-text="İnaktif" {{ game.isActive ? 'checked'}}>
                                </td>
                                <td><a class="btn btn-danger btn-lg removeGame" href="{{ path('admin_remove_game', {'gameSlug': game.slug}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
                                <td><a class="btn btn-warning btn-lg" href="{{ path('admin_edit_game', {'gameSlug': game.slug}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                                <td><a class="btn btn-success btn-lg" href="#"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a></td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    <!-- /.row -->



{% endblock %}