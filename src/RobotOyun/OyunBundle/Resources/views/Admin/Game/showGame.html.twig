{% extends "::layout_admin.html.twig" %}


{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ game.name }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Oyun Açıklaması
                </div>
                <div class="panel-body">
                    <a href="../../../{{ game.image.path }}">
                        <img src="{{ game.image.path | apply_filter('188x123') }}" alt="{{ game.name }}">
                    </a>
<hr>
<br>
                    {{ game.description | raw }}
                    <br>
                    <a href="{{ path('play_game', {'gameSlug': game.slug}) }}" target="_blank" class="btn btn-primary btn-large">Oyunu Oyna</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->

    <!-- /.row -->



{% endblock %}