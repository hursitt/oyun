{% extends "::layout_admin.html.twig" %}


{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Yeni Oyun Ekleme</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Oyun Ekleme Formu
                </div>
                <div class="panel-body">
                    <form action="{{ path('admin_add_game') }}" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Oyun İsmi</label>
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="form-group">
                            <label>Oyun Açıklaması</label>
                            {{ form_widget(form.description, {'attr': {'class': 'ckeditor'} } ) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <div class="form-group">
                            <label>Oyun Kodları</label>
                            {{ form_widget(form.content) }}
                            {{ form_errors(form.content) }}
                        </div>
                        <div class="form-group">
                            <label>Oyun Kategorisi</label>
                            {{ form_widget(form.category) }}
                            {{ form_errors(form.category) }}
                        </div>
                        <div class="form-group">
                            <label>Oyun Resmi</label>
                            {{ form_widget(form.image) }}
                            {{ form_errors(form.image) }}
                        </div><br>
                        <button type="submit" class="btn btn-default">Oyunu Ekle</button>

                        {{ form_rest(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->



{% endblock %}